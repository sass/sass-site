{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2022", "DOM"],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["source/**/*.ts", "tool/generate-module-metadata.ts"],
  "exclude": ["node_modules"]
}
